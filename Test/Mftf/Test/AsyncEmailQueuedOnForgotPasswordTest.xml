<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AsyncEmailQueuedOnForgotPasswordTest">
        <annotations>
            <features value="AsynchronousEmailSending"/>
            <stories value="Forgot password email is queued when module is enabled"/>
            <title value="Password reset email is queued instead of sent immediately"/>
            <description value="Verify that when a customer requests password reset and module is enabled, the email is saved to the queue."/>
            <severity value="CRITICAL"/>
            <testCaseId value="ASYNC-EMAIL-014"/>
            <group value="hryvinskyi"/>
            <group value="asynchronous_email_sending"/>
            <group value="email_queue"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <!-- Disable CAPTCHA -->
            <magentoCLI command="config:set customer/captcha/enable 0" stepKey="disableCaptcha"/>
            <!-- Disable password reset rate limiting -->
            <magentoCLI command="config:set customer/password/password_reset_protection_type 0" stepKey="disableRateLimiting"/>
            <actionGroup ref="CliCacheCleanActionGroup" stepKey="cleanCache">
                <argument name="tags" value="config"/>
            </actionGroup>
            <!-- Create a customer first -->
            <createData entity="Simple_US_Customer" stepKey="createCustomer"/>
            <!-- Enable the async email module -->
            <actionGroup ref="AdminEnableAsyncEmailSendingActionGroup" stepKey="enableModule"/>
            <!-- Clear the email queue -->
            <helper class="\Hryvinskyi\AsynchronousEmailSending\Test\Mftf\Helper\EmailQueueHelper" method="clearEmailQueue" stepKey="clearEmailQueue"/>
        </before>

        <after>
            <!-- Re-enable CAPTCHA -->
            <magentoCLI command="config:set customer/captcha/enable 1" stepKey="enableCaptcha"/>
            <!-- Re-enable password reset rate limiting -->
            <magentoCLI command="config:set customer/password/password_reset_protection_type 1" stepKey="enableRateLimiting"/>
            <!-- Delete customer -->
            <deleteData createDataKey="createCustomer" stepKey="deleteCustomer"/>
            <!-- Clear queue -->
            <helper class="\Hryvinskyi\AsynchronousEmailSending\Test\Mftf\Helper\EmailQueueHelper" method="clearEmailQueue" stepKey="clearEmailQueueAfter"/>
            <!-- Disable module -->
            <actionGroup ref="AdminDisableAsyncEmailSendingActionGroup" stepKey="disableModule"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logoutFromAdmin"/>
        </after>

        <!-- Navigate to forgot password page using Magento core page -->
        <amOnPage url="{{StorefrontForgotPasswordPage.url}}" stepKey="goToForgotPasswordPage"/>
        <waitForPageLoad stepKey="waitForForgotPasswordPage"/>

        <!-- Submit forgot password request using Magento core section elements -->
        <fillField selector="{{StorefrontForgotPasswordSection.email}}" userInput="$$createCustomer.email$$" stepKey="fillEmail"/>
        <click selector="{{StorefrontForgotPasswordSection.resetMyPasswordButton}}" stepKey="clickResetPassword"/>
        <waitForPageLoad stepKey="waitForReset"/>

        <!-- Verify success message -->
        <see userInput="If there is an account associated with" stepKey="seeSuccessMessage"/>

        <!-- Verify email was queued -->
        <helper class="\Hryvinskyi\AsynchronousEmailSending\Test\Mftf\Helper\EmailQueueHelper" method="assertHasPendingEmails" stepKey="assertEmailQueued"/>

        <!-- Verify the email subject contains password reset message -->
        <helper class="\Hryvinskyi\AsynchronousEmailSending\Test\Mftf\Helper\EmailQueueHelper" method="assertPendingEmailWithSubject" stepKey="assertResetSubject">
            <argument name="subjectPattern">Reset</argument>
        </helper>
    </test>
</tests>
