<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminConfigureAsyncEmailSendingActionGroup">
        <annotations>
            <description>Navigates to config and configures all Asynchronous Email Sending module settings.</description>
        </annotations>
        <arguments>
            <argument name="enabled" type="string" defaultValue="1"/>
            <argument name="sendingLimit" type="string" defaultValue="50"/>
            <argument name="clearSuccessAfterDays" type="string" defaultValue="30"/>
            <argument name="clearErrorsAfterDays" type="string" defaultValue="60"/>
            <argument name="debug" type="string" defaultValue="0"/>
        </arguments>

        <!-- Navigate to config page -->
        <amOnPage url="{{AdminAsyncEmailSendingConfigPage.url}}" stepKey="navigateToAsyncEmailConfig"/>
        <waitForPageLoad stepKey="waitForConfigPageLoad"/>
        <conditionalClick selector="{{AdminAsyncEmailSendingConfigSection.generalSettingsHeader}}"
                          dependentSelector="{{AdminAsyncEmailSendingConfigSection.enabledField}}"
                          visible="false"
                          stepKey="expandGeneralSettings"/>
        <waitForElementVisible selector="{{AdminAsyncEmailSendingConfigSection.enabledField}}" stepKey="waitForEnabledField"/>

        <!-- First enable to make dependent fields visible -->
        <selectOption selector="{{AdminAsyncEmailSendingConfigSection.enabledField}}" userInput="1" stepKey="enableTemporarily"/>
        <waitForElementVisible selector="{{AdminAsyncEmailSendingConfigSection.sendingLimitField}}" stepKey="waitForSendingLimitField"/>

        <!-- Fill dependent fields -->
        <fillField selector="{{AdminAsyncEmailSendingConfigSection.sendingLimitField}}" userInput="{{sendingLimit}}" stepKey="setSendingLimit"/>
        <fillField selector="{{AdminAsyncEmailSendingConfigSection.clearSuccessAfterDaysField}}" userInput="{{clearSuccessAfterDays}}" stepKey="setClearSuccessAfterDays"/>
        <fillField selector="{{AdminAsyncEmailSendingConfigSection.clearErrorsAfterDaysField}}" userInput="{{clearErrorsAfterDays}}" stepKey="setClearErrorsAfterDays"/>
        <selectOption selector="{{AdminAsyncEmailSendingConfigSection.debugField}}" userInput="{{debug}}" stepKey="setDebug"/>

        <!-- Save dependent fields while enabled (Magento doesn't save hidden fields) -->
        <click selector="{{AdminAsyncEmailSendingConfigSection.saveConfigButton}}" stepKey="saveDependentFields"/>
        <waitForPageLoad stepKey="waitForDependentFieldsSave"/>
        <see selector="{{AdminAsyncEmailSendingConfigSection.successMessage}}" userInput="You saved the configuration." stepKey="seeSuccessAfterDependentFields"/>

        <!-- Set final enabled state if different from enabled -->
        <conditionalClick selector="{{AdminAsyncEmailSendingConfigSection.generalSettingsHeader}}"
                          dependentSelector="{{AdminAsyncEmailSendingConfigSection.enabledField}}"
                          visible="false"
                          stepKey="expandGeneralSettingsAgain"/>
        <waitForElementVisible selector="{{AdminAsyncEmailSendingConfigSection.enabledField}}" stepKey="waitForEnabledFieldAgain"/>
        <selectOption selector="{{AdminAsyncEmailSendingConfigSection.enabledField}}" userInput="{{enabled}}" stepKey="setEnabled"/>

        <!-- Save final configuration -->
        <click selector="{{AdminAsyncEmailSendingConfigSection.saveConfigButton}}" stepKey="saveConfig"/>
        <waitForPageLoad stepKey="waitForSave"/>
        <see selector="{{AdminAsyncEmailSendingConfigSection.successMessage}}" userInput="You saved the configuration." stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>
