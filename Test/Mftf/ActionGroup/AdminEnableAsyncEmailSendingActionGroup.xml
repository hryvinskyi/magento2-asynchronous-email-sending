<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminEnableAsyncEmailSendingActionGroup">
        <annotations>
            <description>Navigates to config and enables the Asynchronous Email Sending module.</description>
        </annotations>

        <!-- Navigate to config page -->
        <amOnPage url="{{AdminAsyncEmailSendingConfigPage.url}}" stepKey="navigateToAsyncEmailConfig"/>
        <waitForPageLoad stepKey="waitForConfigPageLoad"/>
        <conditionalClick selector="{{AdminAsyncEmailSendingConfigSection.generalSettingsHeader}}"
                          dependentSelector="{{AdminAsyncEmailSendingConfigSection.enabledField}}"
                          visible="false"
                          stepKey="expandGeneralSettings"/>
        <waitForElementVisible selector="{{AdminAsyncEmailSendingConfigSection.enabledField}}" stepKey="waitForEnabledField"/>

        <!-- Enable and save -->
        <selectOption selector="{{AdminAsyncEmailSendingConfigSection.enabledField}}" userInput="1" stepKey="enableAsyncEmailSending"/>
        <click selector="{{AdminAsyncEmailSendingConfigSection.saveConfigButton}}" stepKey="saveConfig"/>
        <waitForPageLoad stepKey="waitForSave"/>
        <see selector="{{AdminAsyncEmailSendingConfigSection.successMessage}}" userInput="You saved the configuration." stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>
