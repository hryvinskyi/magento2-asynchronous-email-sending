<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::system">
                    <resource id="Hryvinskyi_AsynchronousEmailSending::email_queue"
                              title="Asynchronous Email Queue"
                              translate="title"
                              sortOrder="100">
                        <resource id="Hryvinskyi_AsynchronousEmailSending::email_queue_view"
                                  title="View Email Queue"
                                  translate="title"
                                  sortOrder="10"/>
                        <resource id="Hryvinskyi_AsynchronousEmailSending::email_queue_delete"
                                  title="Delete Emails"
                                  translate="title"
                                  sortOrder="20"/>
                        <resource id="Hryvinskyi_AsynchronousEmailSending::email_queue_resend"
                                  title="Resend Emails"
                                  translate="title"
                                  sortOrder="30"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Hryvinskyi_AsynchronousEmailSending::configuration"
                                      title="Hryvinskyi Asynchronous Email Sending Section"
                                      translate="title"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
